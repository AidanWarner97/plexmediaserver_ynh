{
    "name": "PlexMediaServer",
    "id": "plexmediaserver",
    "packaging_format": 1,
    "description": {
        "en": "PlexMediaServer package for YunoHost."
    },
    "version": "1.30.0.6486",
    "url": "http://plex.tv/",
    "license": "non-free",
    "maintainer": {
        "name": "AidanWarner97",
        "email": "aidan@awarner.co.uk"
    },
    "requirements": {
        "yunohost": ">= 11.0.10"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for PlexMediaServer"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for PlexMediaServer only /web is accepted"
                },
                "example": "/web",
                "default": "/web"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?"
                },
                "default": "true"
            }
        ]
    }
}
